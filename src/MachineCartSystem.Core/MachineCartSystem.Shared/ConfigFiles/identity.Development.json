{
  "gatewayUrl": "http://localhost:5001/",
  "identityServerUrl": "http://localhost:5000/",
  "scope": "openid profile order basket catalog",
  "audiences": "order,basket,catalog",
  "clientUrl": "http://localhost:4200",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "openIdConfiguration": {
    "stsServer": "{stsServer}",
    "redirectUrl": "{redirectUrl}/auth-callback",
    "postLogoutRedirectUri": "{postLogoutRedirectUri}/login",
    "clientId": "angular",
    "scope": "{scope}",
    "responseType": "code",
    "silentRenew": true,
    "silentRenewUrl": "{silentRenewUrl}/silent-refresh",
    "logLevel": "Warn",
    // startCheckSession: true,
    // historyCleanupOff: false,
    "postLoginRoute": "/",
    "forbiddenRoute": "/forbidden",
    "unauthorizedRoute": "/unauthorized",
    //maxIdTokenIatOffsetAllowedInSeconds: 40,
    "renewTimeBeforeTokenExpiresInSeconds": 10,
    "autoUserinfo": true,
    "useRefreshToken": false
  },
  "AllowedHosts": "*",
  "Api": [
    {
      "name": "Catalog Api",
      "host": "http://machinecartsystem.catalog.api:80/"
    },
    {
      "name": "Order Api",
      "host": "http://machinecartsystem.order.api:80/"
    },
    {
      "name": "Basket Api",
      "host": "http://machinecartsystem.basket.api:80/"
    }
  ],
  "jwt": {
    "signing": {
      "privateKey": "MySecretKey"
    },
    "audiences": ["{audiences}"],
    "issuer": "http://machinecartsystem.identityserver:80/",
    "authority": "http://machinecartsystem.identityserver:80/",
    "scopes": ["{scopes}"]
  },
  "DbConfiguration": {
    "ConnectionString": "Server=MYPC;Database=MachineCartSystem.v1;Trusted_Connection=True;",
    "Attempt": {
      "MaxRetryCount": 3,
      "MaxRetryDelayInSeconds": 3
    }
  }
}
