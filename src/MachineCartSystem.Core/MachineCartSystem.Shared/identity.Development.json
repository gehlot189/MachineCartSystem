{
  "GatewayUrl": "http://localhost:5001/",
  "IdentityServerUrl": "http://localhost:5000/",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Api": [
          {
            "name": "Catalog Api",
            "host": "http://machinecartsystem.catalog.api:80/"
          },
          {
            "name": "Order Api",
            "host": "http://machinecartsystem.order.api:80/"
          },
          {
            "name": "Basket Api",
            "host": "http://machinecartsystem.basket.api:80/"
          }
      ],
  "Jwt": {
    "Signing": {
      "PrivateKey": "MySecretKey"
    },
    "Audiences": "order,basket,order,catalog",
    "Issuer": "http://machinecartsystem.identityserver:80/",
    "Authority": "http://machinecartsystem.identityserver:80/",
    "Scopes": "openid profile order basket catalog"
  },
  "DbConfiguration": {
    "ConnectionString": "Server=MYPC;Database=MachineCartSystem.v1;Trusted_Connection=True;",
    "Attempt": {
      "MaxRetryCount": 3,
      "MaxRetryDelayInSeconds": 3
    }
  }
}
