{
  "GatewayUrl": "http://localhost:5001/",
  "IdentityServerUrl": "http://localhost:5000/",
  "IssuerOrAuthority": "http://machinecartsystem.identityserver:80/",
  "Basket": {
    "Url": "http://machinecartsystem.basket.api:2001/",
    "Scope": "basket.read",
    "Audiences": "basket",
    "PrivateKey": "MySecretKey"
  },
  "Order": {
    "Url": "http://machinecartsystem.order.api:2001/",
    "Scope": "order.read",
    "Audiences": "order",
    "PrivateKey": "MySecretKey"
  },
  "Catalog": {
    "Url": "http://machinecartsystem.catalog.api:2001/",
    "Scope": "catalog.read",
    "Audiences": "catalog",
    "PrivateKey": "MySecretKey"
  },
  "OpenIdConfiguration": {
    "StsServer": "{stsServer}",
    "RedirectUrl": "{redirectUrl}/auth-callback",
    "PostLogoutRedirectUri": "{postLogoutRedirectUri}/login",
    "ClientId": "angular",
    "Scope": "{scope}",
    "ResponseType": "code",
    "SilentRenew": true,
    "SilentRenewUrl": "{silentRenewUrl}/silent-refresh",
    "LogLevel": "Warn",
    // startCheckSession: true,
    // historyCleanupOff: false,
    "PostLoginRoute": "/",
    "ForbiddenRoute": "/forbidden",
    "unauthorizedRoute": "/unauthorized",
    //maxIdTokenIatOffsetAllowedInSeconds: 40,
    "RenewTimeBeforeTokenExpiresInSeconds": 10,
    "AutoUserinfo": true,
    "UseRefreshToken": false
  }
}
