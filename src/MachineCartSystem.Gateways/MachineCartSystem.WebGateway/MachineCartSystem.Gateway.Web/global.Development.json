{
  "GatewayUrl": "http://host.docker.internal:5000/",
  "IdentityServerUrl": "http://localhost:2000/",
  "Authority": "http://machinecartsystem.identityserver:80/",
  "Issuer": "http://machinecartsystem.identityserver:80/",
  "Identity": {
    "PrivateKey": "MySecretKey"
  },
  "Basket": {
    "Url": "http://machinecartsystem.basket.api:2001/",
    "Scopes": "basket.read",
    "Audiences": "basket",
    "PrivateKey": "MySecretKey"
  },
  "Order": {
    "Url": "http://machinecartsystem.order.api:2001/",
    "Scopes": "order.read",
    "Audiences": "order",
    "PrivateKey": "MySecretKey"
  },
  "Catalog": {
    "Url": "http://machinecartsystem.catalog.api:2001/",
    "Scopes": "catalog.read",
    "Audiences": "catalog",
    "PrivateKey": "MySecretKey"
  },
  "OpenIdConfiguration": {
    "StsServer": "http://localhost:2000",
    "RedirectUrl": "http://localhost:4200/auth-callback",
    "PostLogoutRedirectUri": "http://localhost:4200/login",
    "ClientId": "angular",
    "Scope": "basket.read order.read catalog.read",
    "ResponseType": "code",
    "SilentRenew": true,
    "SilentRenewUrl": "http://localhost:4200/silent-refresh",
    "LogLevel": "Warn",
    // startCheckSession: true,
    // historyCleanupOff: false,
    "PostLoginRoute": "/",
    "ForbiddenRoute": "/forbidden",
    "unauthorizedRoute": "/unauthorized",
    //maxIdTokenIatOffsetAllowedInSeconds: 40,
    "RenewTimeBeforeTokenExpiresInSeconds": 10,
    "AutoUserinfo": true,
    "UseRefreshToken": false
  }
}
